@model IEnumerable<machinetest.Models.Product>

@{
    ViewBag.Title = "Product Data";
}

<div class="container">
    <h2>All Product Data</h2>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Category Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td> @Html.DisplayFor(modelItem => product.ProductName)</td>
                    <td> @Html.DisplayFor(modelItem => product.Category.CategoryName)</td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = product.ProductId }, new { @class = "btn btn-info btn-sm" }) |
                        @Html.ActionLink("Edit", "Edit", new { id = product.ProductId }, new { @class = "btn btn-warning btn-sm" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = product.ProductId }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div>
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</div>
